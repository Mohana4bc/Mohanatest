<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.axium.Axium.controller.InventoryPlntStrloc"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<App>
		<pages>
			<Page title="Stock Transfer From" showNavButton="true" navButtonPress="onPressBack">
				<content>
					<f:SimpleForm columnsL="7" columnsM="7" editable="false" emptySpanL="1" emptySpanM="1" labelSpanL="4" labelSpanM="4"
						layout="ResponsiveGridLayout" maxContainerCols="2" minWidth="1024">
						<f:content>
							<Label text="Source Plant" required="true" class="sapUiSmallMarginTop"></Label>
							<ComboBox id="plantPlantScreenId" filterSecondaryValues="true" showSecondaryValues="true" placeholder="Select Source Plant"
								selectionChange="selectStorageLocation" loadItems="plantLoad"></ComboBox>
							<Label text="Source Storage Location" required="true" class="sapUiSmallMarginTop"></Label>
							<ComboBox id="storageLocationPlantScreenId" filterSecondaryValues="true" showSecondaryValues="true"
								placeholder="Select Source Storage Location"></ComboBox>
						</f:content>
					</f:SimpleForm>
				</content>
				<footer>
					<Bar>
						<contentRight>
							<Button text="Next" press="onInvenPlntStrLocSearch" type="Emphasized"/>
						</contentRight>
					</Bar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>