<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.axium.Axium.controller.BinScanFGPutaway"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<App>
		<pages>
			<Page title="FG Putaway BinScan" showNavButton="true" navButtonPress="onPressBack">
				<content>
					<f:SimpleForm columnsL="7" columnsM="7" editable="false" emptySpanL="1" emptySpanM="1" labelSpanL="4" labelSpanM="4"
						layout="ResponsiveGridLayout" maxContainerCols="2" minWidth="1024">
						<f:content>
							<Label design="Bold" text="Bin Number" required="true" class="sapUiSmallMarginTop"></Label>
							<Input id="fgPutAwayBinId" placeholder="Scan Bin Number" change="handleBinNumber"></Input>
							<Button text="Save" id="idSave" type="Accept" icon="sap-icon://save" press="onBinScan"/>
						</f:content>
					</f:SimpleForm>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>